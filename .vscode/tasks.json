{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "cmake -B ${workspaceFolder}/build -S ${workspaceFolder} --preset Debug;cmake --build ${workspaceFolder}/build --target infantry_aimbot",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "/bin/bash",
          "args": ["-c"]
        }
      },
      "problemMatcher": "$gcc"
    }
  ]
}
